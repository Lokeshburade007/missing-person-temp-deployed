<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Missing person</title>
    
    <style>
        img {
            max-width: 100%;
            height: auto;
        }


        @media (max-width: 576px) {
            nav {
                display: flex;
                flex-direction: column;
            }
            body{
                font-size: 22px;
            }
            footer {
                margin-top: 0;
            }
            #image-search{
                margin-top: 30px;
                margin-left: auto;
                margin-right: auto;
                justify-content: center;
                width: 90%;
                overflow: hidden;
            }
            #logo-mobile{
                display: flex;
            }
            #home-btn{
                margin-top: 30px;
                font-size: 18px;
                padding: 5px 10px;
                width: 120px;
                margin-bottom: 10px;
            }
            #form-main{
                display: flex;
                flex-direction: column;
                justify-content: center;
                width: 95%;
            }
            #font-main{
                font-size: 22px;
            }
            #desc-main{
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }
            #dash-container{
                width: 80%;
                display: flex;
                justify-content: center;
            }
        }
        .mobile-menu{
            position: absolute;
            left: 20px;
            z-index: 88;
            background-color: rgb(129, 129, 129);
            width: 120px;
            margin-top: 90px;
            display: flex;
            justify-content: end;
            padding-top: 20px;
        }
        .mobile-menu-button i{
            z-index: 89;
            font-size: 22px;
            margin-top: 10px;
            position: absolute;
            left: 25px;
        }
    </style>
    <script src="https://kit.fontawesome.com/6c7c0a9da6.js" crossorigin="anonymous"></script>

    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <nav> 
        
        <div id="logo-mobile" class="hidden mt-10 flex flex-col items-center flex-shrink-0 px-4" style="flex-direction: column;">
            <a class="px-4 text-left focus:outline-none inline-flex items-center" href="/">
                <div class="misspersonlogo">
                    <i class="fa-solid fa-person-circle-question text-4xl"> </i>
                </div>
                <h2 class="block p-2 text-xl font-medium tracking-tighter text-gray-900 transition duration-500 ease-in-out transform cursor-pointer hover:text-gray-900">Find Missing People</h2>
            </a>
        </div>
        <div class=" mx-auto px-4">
                <div class="flex justify-between">
                    <div class="flex space-x-7">
                    </div>
                    <!-- Mobile menu button -->
                    <div class="md:hidden flex items-center">
                        <button class="outline-none mobile-menu-button" id="mobile-btn">
                            <i class="fa-solid fa-bars"></i>
                    </button>
                    </div>
                </div>
            </div>
            <!-- mobile menu -->
            <div class="hidden mobile-menu" id="burgur-menu">
                <ul class="burgur-menu-main">
                    <li>
                        <a <% if (page_name==='home' ) { %>
                            class="active block text-sm px-2 py-4 hover:bg-green-500 transition duration-300" style="font-size: 20px;"
                            <%} else { %>
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300" style="font-size: 20px;"
                            <% } %> href="/">
                                <span class="ml-4"> Home</span>
                        </a>
                    </li>
                    <li>
                        <a <% if (page_name==='search' ) { %>
                            class="active block text-sm px-2 py-4 hover:bg-green-500 transition duration-300" style="font-size: 20px;"
                            <%} else { %>
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300" style="font-size: 20px;"
                            <% } %> href="/search">
                                <span class="ml-4"> Search</span>
                        </a>
                    </li>
                    <li>
                        <a <% if (page_name==='upload' ) { %>
                            class="active block text-sm px-2 py-4 hover:bg-green-500 transition duration-300" style="font-size: 20px;"
                            <%} else { %>
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300" style="font-size: 20px;"
                            <% } %> href="/upload">
                                <span class="ml-4"> Register</span>
                        </a>
                    </li>
                </ul>
            </div>
        <div class="flex overflow-hidden bg-white rounded-lg">

            <!-- header -->
            <%- include('./header'); %>
            
           
            

                <div class="flex flex-col flex-1 w-0 overflow-hidden " id="image-search">
                    <main class="relative flex-1 overflow-y-auto focus:outline-none">
                        <div class=" mb-6 py-6 " id="desc-main" >
                            <div class=" mb-4 px-4 mx-auto max-w-7xl sm:px-6 md:px-8">
                                <h1 class="text-lg text-neutral-600" id="font-main">Click the pic and see the result</h1>
                            </div>
                            <div class="px-4 mx-auto max-w-7xl sm:px-6 md:px-8" >

       <!-- form  -->
                                <form action="/searchFace" method="post" enctype="multipart/form-data" id="form-main">
                                    <label class="cameraButton mb-10" style= "padding: 2px; border-radius: 8px; cursor: pointer; margin: 5px;">
                                        <input type="file" name="image" accept="image/png, image/gif, image/jpeg" style= "margin-left: 30px;" required>
                                    </label>
                                    <button type="submit" id="home-btn"
                                        class="btn select-none mt-35 mr-auto ml-auto rounded-lg bg-green-500 py-3 px-3 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-pink-500/20 transition-all hover:shadow-lg hover:shadow-pink-500/40 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none w-20 h-9">Check</button>
                                </form>


                                <div class="py-4 bg-gray-50" id="dash-container">
                                    <div >
                                        <%- include('./dashboard'); %>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </main>
                </div>
        </div>
    </nav>

    <!-- footer -->
    <%- include('./footer'); %>
</body>
<script>
    const btn = document.getElementById("mobile-btn");
    const menu = document.getElementById("burgur-menu");

    btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
    });
</script>

</html>